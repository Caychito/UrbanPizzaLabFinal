<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Título -->

        <!-- CardView con campos -->

        <TextView
            android:id="@+id/txtTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/adlam_display"
            android:paddingTop="20dp"
            android:text="Mi Perfil"
            android:textColor="#FF5722"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardDatosPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adlam_display"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Nombre:"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/adlam_display"
                    android:padding="5dp"
                    android:textSize="22sp" />

                <!-- Apellido -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/adlam_display"
                    android:paddingLeft="10dp"
                    android:text="Apellido:"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/adlam_display"
                    android:paddingStart="5dp"
                    android:textSize="22sp" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/adlam_display"
                    android:paddingLeft="10dp"
                    android:text="Email:"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/adlam_display"
                    android:paddingStart="5dp"
                    android:textSize="22sp" />

                <!-- DNI -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/adlam_display"
                    android:paddingLeft="10dp"
                    android:text="DNI:"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDNI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    android:fontFamily="@font/adlam_display"
                    android:paddingStart="5dp"
                    android:textSize="22sp" />

                <!-- Botón para cambiar contraseña -->
                <Button
                    android:id="@+id/btnCambiarContrasenia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#FF5722"
                    android:fontFamily="@font/adlam_display"
                    android:text="Cambiar Contraseña"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imgDecorativa"
                    android:layout_width="131dp"
                    android:layout_height="143dp"
                    android:layout_gravity="center"
                    android:contentDescription="Imagen decorativa"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_gozu" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include layout="@layout/item_navbar" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Imagen centrada al final -->

    </LinearLayout>

</ScrollView>